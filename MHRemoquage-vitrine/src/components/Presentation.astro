---
import CertificationBadge from "./shared/CertificationBadge.astro";
---

<div
  class="relative w-full min-h-[500px] sm:min-h-[600px] lg:min-h-[70vh] overflow-hidden group"
>
  <img
    src="/presentation-background.png"
    alt="Dépannage automobile sur route"
    class="absolute inset-0 w-full h-full object-cover"
  />

  <div
    class="absolute inset-0 bg-black/60 transition-all duration-500 ease-in-out group-hover:bg-black/65"
  >
  </div>

  <div
    class="relative z-10 flex min-h-[500px] sm:min-h-[600px] lg:min-h-[70vh] items-center py-12 sm:py-16 lg:py-20"
  >
    <div class="w-full max-w-4xl mx-auto px-4 sm:px-6 md:px-8 text-white">
      <div class="space-y-4 sm:space-y-6 lg:space-y-8">
        <div>
          <h1
            class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-extrabold leading-tight drop-shadow-lg"
          >
            Full <span class="text-red-primary">Dépannage</span>
          </h1>
          <p
            class="mt-3 md:mt-4 text-sm sm:text-base md:text-lg lg:text-xl text-white/90 max-w-2xl"
          >
            Votre dépanneur automobile de confiance partout en France.
          </p>
        </div>

        <div
          class="flex flex-wrap gap-x-4 sm:gap-x-6 gap-y-2 sm:gap-y-3 text-sm md:text-base text-white/90"
        >
          <div class="flex items-center gap-2">
            <span
              class="h-[2px] w-4 sm:w-6 rounded-full bg-red-primary flex-shrink-0"
            ></span>
            <span
              class="uppercase tracking-wide font-semibold text-xs sm:text-[0.8rem] text-white whitespace-nowrap"
              >Assistance</span
            >
          </div>

          <div class="flex items-center gap-2">
            <span
              class="h-[2px] w-4 sm:w-6 rounded-full bg-red-primary flex-shrink-0"
            ></span>
            <span
              class="uppercase tracking-wide font-semibold text-xs sm:text-[0.8rem] text-white whitespace-nowrap"
              >Serrurerie</span
            >
          </div>

          <div class="flex items-center gap-2">
            <span
              class="h-[2px] w-4 sm:w-6 rounded-full bg-red-primary flex-shrink-0"
            ></span>
            <span
              class="uppercase tracking-wide font-semibold text-xs sm:text-[0.8rem] text-white whitespace-nowrap"
              >Convoyage</span
            >
          </div>

          <div class="flex items-center gap-2">
            <span
              class="h-[2px] w-4 sm:w-6 rounded-full bg-red-primary flex-shrink-0"
            ></span>
            <span
              class="uppercase tracking-wide font-semibold text-xs sm:text-[0.8rem] text-white whitespace-nowrap"
              >Diagnostic</span
            >
          </div>
        </div>

        <div class="pt-2 sm:pt-4">
          <a
            href="#contact"
            class="inline-flex items-center justify-center rounded-full bg-red-primary px-5 sm:px-6 py-2.5 sm:py-3 text-sm md:text-base font-semibold shadow-lg shadow-red-primary/40 hover:bg-red-primary/90 transition-all duration-300 w-full sm:w-auto"
          >
            Demander un dépannage
          </a>
        </div>
<div class="flex justify-center pt-5 text-white md:justify-start">
  <div class="flex flex-col gap-4 md:flex-row md:gap-8">
    <CertificationBadge title="Professionnel agréé" />
    <CertificationBadge title="Intervention rapide" />
    <CertificationBadge title="Tarifs transparents" />
  </div>
</div>
      </div>
    </div>
  </div>
</div>
