<script>
  document.addEventListener('scroll', () => {
    const header = document.querySelector('header');
    if (window.scrollY > 20) {
      header.classList.add('shrink');
    } else {
      header.classList.remove('shrink');
    }
  });
</script>

<style>
header {
  transition: background-color 0.4s ease, padding 0.4s cubic-bezier(0.25, 0.1, 0.25, 1);
}

header .max-w-6xl,
header img {
  transition: height 0.45s cubic-bezier(0.22, 1, 0.36, 1); /* ease-out très smooth */
}

header.shrink .max-w-6xl {
  height: 60px !important;
}

header.shrink img {
  height: 40px !important;
}
</style>
